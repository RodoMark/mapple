<body>
  <%- include("partials/_header") %>
    <div class="container" style="border-top:0;height: 700px;">
      <div class="container2" style="height:70px"></div>
      <div class="container1 d-flex flex-row">
        <div class="col-6">
          <form method="POST" action="/new">
            <div class="rowNameMap d-flex flex-row" style="margin-bottom: 50px;">
              <div class="input-group-prepend">
                <span class="input-group-text" id="newMapDesc"><b>Your marker's name</b></span>
              </div>
              <input type="text" class="form-control" id="newMarkerName" aria-describedby="basic-addon3">
            </div>
            <div class="rowDescriptionMarker d-flex justify-content-between"
              style="margin-top: 10px; margin-bottom: 30px">
              <p><b>Description of your marker:</b></p>
              <textarea name="text" id="description-text"></textarea>
            </div>

            <div class="markerBtns d-flex justify-content-center" style="margin-top: 10px; margin-bottom: 10px;">
              <div class="rowSubmit">
                <button name="submit" type="submit" class="btn btn-primary" id="markerSubmit"
                  style="width: 90px;">Submit</button>
              </div>
            </div>
          </form>
          <form method="POST" action="#">
            <div class="rowDelete d-flex justify-content-center">
              <button name="delete" type="submit" class="btn btn-primary" id="markerDelete"
                style="width: 90px;">Delete</button>
            </div>
          </form>
        </div>
        <div class="col-6">
          <div style="width: 100%"><iframe width="100%" height="500px" frameborder="0" scrolling="no" marginheight="0"
              marginwidth="0"
              src="https://maps.google.com/maps?width=100%25&amp;height=100%25&amp;hl=en&amp;q=1%20Grafton%20Street,%20Dublin,%20Ireland+(My%20Business%20Name)&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe>
          </div>
        </div>
      </div>

      <hr class="featurette-divider" style="margin-top:4em; margin-bottom:1em">
      <footer class="container4" style="margin-bottom: 15px;">
        <p>Â© 2021 Mapple project</p>
      </footer>
    </div>
</body>

</html>