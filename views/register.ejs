<body>
  <%- include("partials/_header") %>

    <div class="container" style="border-top:0">
      <div class="container2" style="height:70px"></div>
      <hr class="featurette-divider" style="margin-bottom:3.5em; margin-top:3.5em">
      <div class="container1 text-center d-flex justify-content-center" style="height: 650px;">
        <main class="form-register">
          <form method="POST" action="/auth/register">
            <img class="mb-4" src="/images/Mapple2just_logo.png" alt width="72" height="57">
            <h1 class="h3 mb-3 fw-normal">Please register</h1>
            <label for="handleReg" class="visually-hidden">Username</label>
            <input name="handle" id="handleReg" class="form-control" placeholder="Username" required autofocus></input>
            <label for="emailReg" class="visually-hidden">Email</label>
            <input type="email" id="emailReg" class="form-control" placeholder="Email address" required
              autofocus></input>
            <label for="passwordReg" class="visually-hidden">Password</label>
            <input type="password" id="passwordReg" class="form-control" placeholder="Password" required></input>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            <p class="mt-5 mb-3 text-muted">Â© Mapple 2021</p>
          </form>
        </main>
      </div>
    </div>


</body>

