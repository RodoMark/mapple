<body>
  <%- include("partials/_header") %>

    <div class="container" style="border-top:0">
      <div class="container2" style="height:70px"></div>
      <div class="container1 text-center d-flex justify-content-center" style="height: 650px;">
        <main class="form-register d-flex justify-content-center">
          <form method="POST" action="/auth/login" class="d-flex-column" style="width: 47%">
            <img class="mb-4" id="logoAuth" src="/images/Mapple2just_logo.png" alt width="115" height="110">
            <h1 class="h3 mb-3 fw-normal">Please login</h1>
            <input type="email" id="emailReg" class="form-control" placeholder="Email address" required
              autofocus></input>
            <input type="password" id="passwordReg" class="form-control" placeholder="Password" required></input>
            <button type="submit" id="authSubmit" class="w-40 btn btn-lg btn-primary"
              style="margin-top: 1.5em">Register</button>
            <p class="mt-5 mb-3 text-muted">Â© Mapple 2021</p>
          </form>
        </main>
      </div>
    </div>


</body>

</html>




